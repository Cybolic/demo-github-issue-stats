{
  "name": "github-issue-stats",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "author": "Christian Dannie Storgaard (Cybolic)",
  "scripts": {
    "dev": "concurrently --names server,client \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "env SERVER_API_ONLY=1 tsx watch src/server/server.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc --project ./tsconfig.build.json --outDir dist/server",
    "start": "node dist/server/server.js",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "react": "^19.1.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "tsx": "^4.20.3",
    "vite": "^7.1.0"
  }
}
